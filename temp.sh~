#!/bin/bash
source ~/.bashrc
#echo "$1"
if [ -x /usr/bin/dircolors ]; then test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"; alias ls='ls --color=auto'; alias grep='grep --color=auto'; alias fgrep='fgrep 
--color=auto'; alias egrep='egrep --color=auto'; fi; ls
exec bash
